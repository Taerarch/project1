<h1><%= @list.title %></h1>


<% @list.books.each do |book| %>
  <div class="box">
    <h1><%= link_to book.title, book %></h1>
    <%= image_tag book.image, :class => 'thumb' if book.image.present? %>
    <h5><%= link_to 'Delete', book, :method => 'delete'  %></h5>
  </div>
<% end %>

<div class="controls">
  <%= link_to 'Edit', edit_list_path(@list.id) %>
  |
  <%= link_to 'Delete', @list, :method => 'delete'  %>
</div>
