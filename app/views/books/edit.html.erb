<h1>Edit Book</h1>

<div class="form">

  <%= form_for @book do |f| %>

    <%= f.label :title %>
    <%= f.text_field :title, :required => true %>

    <%= f.label :year %>
    <%= f.text_field :year %>

    <%= f.label :genre %>
    <%= f.text_field :genre %>

    <%= f.label :synopsis %>
    <%= f.text_field :synopsis %>

    <%= f.label :image %>
    <%= f.url_field :image %>

    <%= f.label :author_id %>
    <%= f.select :author_id, Author.pluck(:name, :id), :include_blank => true %>

    <%= f.submit %>

  <% end %>
</div>
